<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>carritoBean</managed-bean-name>
        <managed-bean-class>com.udea.controller.CarritoBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>transaccionBean</managed-bean-name>
        <managed-bean-class>com.udea.controller.TransaccionBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/ShopCar.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>REGRESAR</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>INICIO</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>PASARACAJA </from-outcome>
            <to-view-id>/CheckOut.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VERARTICULOS</from-outcome>
            <to-view-id>/ShopCar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/CheckOut.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>PAGAR</from-outcome>
            <to-view-id>/Bill.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>VOLVERARTICULOS</from-outcome>
            <to-view-id>/ShopCar.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>INICIO</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Bill.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>INICIO</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
